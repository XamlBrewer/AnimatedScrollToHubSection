<Page x:Class="XamlBrewer.Universal.AnimatedHub.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:XamlBrewer.Universal.AnimatedHub"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#FFFEF102">

    <Hub x:Name="MainHub"
         Header="Hub Animated Scrolling"
         Background="#FFFEF102">
        <HubSection x:Name="HubSection1"
                    Header=" ">
            <DataTemplate>
                <Grid>
                    <!-- Background -->
                    <Image Source="Assets/watchmen_0.png" />
                    <!-- Links -->
                    <StackPanel Orientation="Vertical"
                                HorizontalAlignment="Right">
                        <HyperlinkButton Content="Rorschach"
                                         Click="ScrollToContent1_Clicked"
                                         Foreground="Red"
                                         HorizontalAlignment="Right" />
                        <HyperlinkButton Content="Silk Spectre"
                                         Click="ScrollToContent2_Clicked"
                                         Foreground="Red"
                                         HorizontalAlignment="Right" />
                        <HyperlinkButton Content="The Comedian"
                                         Click="ScrollToContent3_Clicked"
                                         Foreground="Red"
                                         HorizontalAlignment="Right" />
                    </StackPanel>
                    <!-- Logo -->
                    <Viewbox x:Name="Logo"
                             StretchDirection="DownOnly"
                             Margin="0 0 -18 0"
                             HorizontalAlignment="Right"
                             VerticalAlignment="Bottom"
                             Grid.Row="1">
                        <Canvas Height="80"
                                Width="200"
                                Background="Transparent">
                            <Canvas>
                                <Viewbox Height="70"
                                         Canvas.Left="5"
                                         Canvas.Top="5">
                                    <Canvas Width="124"
                                            Height="240"
                                            Background="Transparent">
                                        <Path Width="116"
                                              Height="236"
                                              Margin="4 0 4 4"
                                              Stretch="Fill"
                                              Fill="DimGray"
                                              Data="F1 M 4869.77,-3633.83C 4870.14,-3633.18 4866.87,-3606.81 4867.34,-3603.82C 4867.81,-3600.82 4871.83,-3590.35 4871.83,-3584.36C 4871.83,-3574.77 4868.13,-3569.7 4865.19,-3561.36C 4863.32,-3556.07 4863.13,-3540.54 4862.94,-3538.77C 4862.76,-3536.99 4853.72,-3414.8 4852.97,-3411.99C 4852.22,-3409.19 4849.1,-3401.58 4843.86,-3401.33C 4838.63,-3401.08 4802.53,-3401.33 4809.36,-3401.33C 4816.18,-3401.33 4779.21,-3401.08 4773.98,-3401.33C 4768.74,-3401.58 4766.14,-3408.25 4765.74,-3411.99C 4765.44,-3414.88 4755.96,-3536.99 4755.77,-3538.77C 4755.58,-3540.54 4755.39,-3556.07 4753.52,-3561.36C 4750.58,-3569.7 4746.89,-3574.77 4746.89,-3584.36C 4746.89,-3590.35 4750.91,-3600.82 4751.37,-3603.82C 4751.84,-3606.81 4748.57,-3633.18 4748.94,-3633.83C 4749.32,-3634.49 4750.81,-3634.49 4750.81,-3634.49" />
                                    </Canvas>
                                </Viewbox>
                            </Canvas>
                            <Grid Width="200"
                                  Height="80">
                                <TextBlock Foreground="Red"
                                           FontSize="24"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Bottom"
                                           Padding="0"
                                           Margin="0 0 8 12">
                                    <Run Text="XAML" />
                                    <Run Text="Brewer"
                                         Foreground="DimGray"
                                         FontWeight="Light" />
                                </TextBlock>
                            </Grid>
                        </Canvas>
                    </Viewbox>

                </Grid>

            </DataTemplate>
        </HubSection>
        <HubSection x:Name="HubSection2"
                    Header="Rorschach">
            <DataTemplate>
                <Grid>
                    <Image Source="Assets/watchmen_1.png" />
                    <StackPanel Orientation="Horizontal">
                        <AppBarButton Icon="Play"
                                      Label="Next"
                                      Click="ScrollToNext_Clicked" />
                        <AppBarButton Icon="Next"
                                      Label="Last"
                                      Click="ScrollToLast_Clicked" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </HubSection>
        <HubSection x:Name="HubSection3"
                    Header="Silk Spectre">
            <DataTemplate>
                <Grid>
                    <Image Source="Assets/watchmen_2.png" />
                    <StackPanel Orientation="Horizontal">
                        <AppBarButton Icon="Play"
                                      Label="Next"
                                      Click="ScrollToNext_Clicked" />
                        <AppBarButton Icon="Next"
                                      Label="Last"
                                      Click="ScrollToLast_Clicked" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </HubSection>
        <HubSection x:Name="HubSection4"
                    Header="The Comedian">
            <DataTemplate>
                <Grid>
                    <Image Source="Assets/watchmen_3.png" />
                    <StackPanel Orientation="Horizontal">
                        <AppBarButton Icon="Back"
                                      Label="Previous"
                                      Click="ScrollToPrevious_Clicked" />
                        <AppBarButton Icon="Previous"
                                      Label="First"
                                      Click="ScrollToFirst_Clicked" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </HubSection>
    </Hub>
</Page>